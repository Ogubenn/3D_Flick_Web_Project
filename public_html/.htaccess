# =====================================
# XSS ve INJECTION KORUMALARI
# =====================================

<IfModule mod_rewrite.c>
    # SQL Injection ve XSS pattern'leri engelle
    RewriteCond %{QUERY_STRING} (\<|%3C).*script.*(\>|%3E) [NC,OR]
    RewriteCond %{QUERY_STRING} GLOBALS(=|\[|\%[0-9A-Z]{0,2}) [OR]
    RewriteCond %{QUERY_STRING} _REQUEST(=|\[|\%[0-9A-Z]{0,2}) [OR]
    RewriteCond %{QUERY_STRING} (\<|%3C).*iframe.*(\>|%3E) [NC,OR]
    RewriteCond %{QUERY_STRING} (\<|%3C).*object.*(\>|%3E) [NC,OR]
    RewriteCond %{QUERY_STRING} (\<|%3C).*embed.*(\>|%3E) [NC,OR]
    RewriteCond %{QUERY_STRING} (union|select|insert|drop|delete|update|create|alter) [NC,OR]
    RewriteCond %{QUERY_STRING} (\.\./|\.\.\%2F) [NC,OR]
    RewriteCond %{QUERY_STRING} (javascript\:|data\:|vbscript\:) [NC,OR]
    RewriteCond %{QUERY_STRING} (\<|%3C).*(\>|%3E) [NC]
    RewriteRule ^(.*)$ - [F,L]
    
    # Şüpheli User-Agent'ları engelle
    RewriteCond %{HTTP_USER_AGENT} (libwww-perl|wget|python|nikto|curl|scan|java|winhttp|clshttp|loader) [NC,OR]
    RewriteCond %{HTTP_USER_AGENT} (%0A|%0D|%27|%3C|%3E|%00) [NC,OR]
    RewriteCond %{HTTP_USER_AGENT} (;|<|>|'|"|\)|\(|%0A|%0D|%22|%27|%28|%3C|%3E|%00).*(libwww-perl|wget|python|nikto|curl|scan|java|winhttp|HTTrack|clshttp|archiver|loader|email|harvest|extract|grab|miner) [NC]
    RewriteRule ^(.*)$ - [F,L]
    
    # Zararlı bot'ları engelle (ama iyi bot'ları koru)
    RewriteCond %{HTTP_USER_AGENT} (bot|crawl|slurp|spider|archiver|harvester|scraper) [NC]
    RewriteCond %{HTTP_USER_AGENT} !(googlebot|bingbot|yahoo|baidu|yandex|facebook|twitter|linkedin|whatsapp) [NC]
    RewriteRule ^(.*)$ - [F,L]
</IfModule>

# =====================================
# DOSYA KORUMA (File Protection)
# =====================================

# Hassas dosyalara erişimi engelle
<FilesMatch "(^#.*#|\.(htaccess|htpasswd|ini|log|sh|sql|conf|bak|old|tmp|config|dist|fla|inc|psd|sw[op])|~)$">
    Require all denied
</FilesMatch>

# Executable dosya upload'ını engelle
<FilesMatch "\.(php|phtml|php3|php4|php5|pl|py|jsp|asp|aspx|sh|cgi|exe|bat|cmd)$">
    Require all denied
</FilesMatch>

# Block access to directories
Options -Indexes

# Server signature'ı gizle
ServerTokens Prod
ServerSignature Off

# Custom 404 page
ErrorDocument 404 /index.html

# WebP Support
<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Check if browser supports WebP
    RewriteCond %{HTTP_ACCEPT} image/webp
    
    # Check if WebP replacement image exists
    RewriteCond %{DOCUMENT_ROOT}/$1.webp -f
    
    # Serve WebP image instead
    RewriteRule (.+)\.(jpe?g|png)$ $1.webp [T=image/webp,E=accept:1]
</IfModule>

<IfModule mod_headers.c>
    Header append Vary Accept env=REDIRECT_accept
</IfModule>

AddType image/webp .webp

# Preload hints
<IfModule mod_headers.c>
    # Preload critical resources
    <FilesMatch "index\.html$">
        Header add Link "</new-style.css>; rel=preload; as=style"
        Header add Link "</js/app.js>; rel=preload; as=script"
        Header add Link "</images/og-image.jpg>; rel=preload; as=image"
    </FilesMatch>
</IfModule>